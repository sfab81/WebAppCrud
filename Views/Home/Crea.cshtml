@{
    ViewData["Title"] = "Crea";
}

<h1>@ViewData["Title"]</h1>

@model ProdModel;

<div class="row">
    <div class="col-md-4">
        <form asp-action="Crea">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Nome" class="control-label"></label>
                <input asp-for="@Model.Nome" class="form-control" />
                <span asp-validation-for="@Model.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Prezzo" class="control-label"></label>
                <input asp-for="@Model.Prezzo" class="form-control" />
                <span asp-validation-for="@Model.Prezzo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Nuovo Prodotto" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
